{
  "name": "Fullstack 2025 DevContainer",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    }
  },
  "postCreateCommand": "apt-get update && apt-get install -y curl wget netcat-traditional iputils-ping && dotnet tool install --global dotnet-ef && dotnet restore",
  "remoteEnv": {
    "DOTNET_ENVIRONMENT": "Development",
    "ConnectionStrings__DefaultConnection": "Host=localhost;Database=defaultdb;Username=postgres;Password=postgres"
  },
  "forwardPorts": [
    5432
  ],
  "runArgs": [
    "--init"
  ]
}